#!/bin/sh -e

# head or compute node?
cluster_users='/head_usr/local/cluster/users.txt'

# Awesome example of inefficiency, but efficiency is irrelevant here
for user in `awk -F ':' ' { print $1 }' $cluster_users`; do
    # cluster-local-useradd checks for non-existent and mismatching users
    # so we don't need to do it here
    cluster-local-useradd $user
done

