#!/bin/sh -e

##########################################################################
#   Script description:
#       
#   Arguments:
#       
#   Returns:
#       
#   History:
#   Date        Name        Modification
#   2015-06-11  root        Begin
##########################################################################

usage()
{
    printf "Usage: $0 username\n"
    exit 1
}


##########################################################################
#   Main
##########################################################################

if [ $# != 1 ]; then
    usage
fi

user_name=$1
os_type=`auto-ostype`
case $os_type in
FreeBSD)
    master_pw=/etc/master.passwd
    ;;
RHEL)
    master_pw=/etc/shadow
    ;;
*)
    printf "Unsupported OS: $os_type\n"
    exit 1
    ;;
esac

cluster-restore-pw $user_name $master_pw

