#!/bin/sh

##########################################################################
#   Script description:
#       
#   Arguments:
#       
#   Returns:
#       
#   History:
#   Date        Name        Modification
#   2014-01-08  root        Begin
##########################################################################

usage()
{
    printf "Usage: $0 \n"
    exit 1
}


##########################################################################
#   Function description:
#       Pause until user presses return
##########################################################################

pause()
{
    local junk
    
    printf "Press return to continue..."
    read junk
}


##########################################################################
#   Main
##########################################################################

if [ $# != 0 ]; then
    usage
fi

while true; do

    clear
    cat << EOM
    
			    **************************
				Cluster Admin Menu
			    **************************
				
1.. Shut down cluster
2.. SLURM management
3.. RAID management
4.. Network management
5.. User management
6.. Restart Ganglia
Q.. Quit

EOM

    printf "Selection? "
    read selection
    clear
    case $selection in
    1)
	cluster-shutdown
	;;
    2)
	slurm-admin
	;;
    3)
	cluster-raid-admin
	;;
    4)
	cluster-net-admin
	;;
    5)
	cluster-user-admin
	pause
	;;
    6)
	cluster-ganglia-restart
	pause
	;;
    Q|q)
	exit 0
	;;
    *)
	printf "Invalid selection: '$selection'\n"
	;;
    esac
    pause
done

