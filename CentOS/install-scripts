#!/bin/sh -e

sys_files="cluster-admin \
    cluster-slurm-admin \
    cluster-adduser \
    cluster-finish-user \
    cluster-sync-user \
    node-sync-user* \
    ssh-keygen-for-user \
    cluster-shutdown \
    cluster-slurm-restart \
    cluster-sync-slurm.conf \
    cluster-sync-login2 \
    cluster-sync-data-nodes \
    cluster-compute-nodes \
    cluster-io-nodes \
    cluster-mount-nfs \
    cluster-backup-sysfiles \
    cluster-raid-admin \
    cluster-net-admin \
    cluster-user-admin \
    cluster-add-to-group \
    cluster-backup-login-nodes \
    update-idle-nodes \
    resume-all-down-nodes"

user_files="cluster-io-nodes \
    slurm-user-cores \
    slurm-job-status \
    slurm-pending-jobs \
    cluster-passwd \
    ppgen \
    topnode \
    pending-jobs \
    job-stats \
    slurm-find-strays"

common_sys_files="cluster-run \
    cluster-ganglia-restart"

common_user_files="cluster-load \
    cluster-load-summary \
    slurm-shell"

cd Scripts
cp $sys_files /usr/local/sbin
cp $user_files /usr/local/bin

cd ../../Common/Scripts
cp $common_sys_files /usr/local/sbin
cp $common_user_files /usr/local/sbin

cd /usr/local/sbin
chmod 750 $sys_files $common_sys_files

cd /usr/local/bin
chmod 755 $user_files

